<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义view"
        />

    <com.example.liyang.helloandroid.widget.CustomTextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="对现有控件扩展"/>

    <com.example.liyang.helloandroid.widget.CustomTextView2
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="对现有控件扩展2"/>

    <com.example.liyang.helloandroid.widget.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        custom:leftBackground="@color/colorPrimaryDark"
        custom:leftText="Back"
        custom:leftTextColor="#fff"
        custom:rightBackground="@color/colorPrimaryDark"
        custom:rightText="More"
        custom:rightTextColor="#fff"
        custom:title="自定义组合控件"
        custom:titleTextColor="#123412"
        custom:titleTextSize="10sp"
        android:layout_marginTop="10dp"
        />

    <com.example.liyang.helloandroid.widget.CustomView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"/>

    <com.example.liyang.helloandroid.widget.CustomView2
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>